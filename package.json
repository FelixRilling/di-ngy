{
    "name": "di-ngy",
    "version": "8.0.0-7",
    "description": "A small discord.js + cli-ngy boilerplate",
    "main": "dist/dingy.common.js",
    "module": "dist/dingy.esm.js",
    "types": "types/main.d.ts",
    "settings": {
        "namespace": {
            "module": "dingy",
            "file": "dingy"
        },
        "external": [
            "path",
            "fs-extra",
            "discord.js",
            "yamljs",
            "logby",
            "cli-ngy",
            "lightdash"
        ]
    },
    "scripts": {
        "start": "npm-run-all lint build test docs",
        "build": "rollup -c ./tasks/rollup.config.js",
        "build:test": "rollup -c ./tasks/rollup.config.test.js",
        "build:declarations": "tsc --build ./tasks/tsconfig.declarations.json",
        "dist": "npm-run-all --parallel build build:declarations",
        "watch": "rollup -c ./tasks/rollup.config.js --watch",
        "lint": "npm-run-all lint:ts",
        "lint:ts": "tslint ./src/**/*.ts",
        "fix": "npm-run-all fix:ts fix:prettier",
        "fix:ts": "tslint ./src/**/*.ts --fix",
        "fix:prettier": "prettier ./src/**/* --write",
        "docs": "jsdoc -c jsdoc.json",
        "test": "npm-run-all build:test test:jasmine",
        "test:jasmine": "jasmine",
        "test:manual": "rollup -c ./tasks/rollup.config.test-manual.js && node ./spec/out/manual/main.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FelixRilling/di-ngy.git"
    },
    "keywords": [
        "bot",
        "boilerplate",
        "discord"
    ],
    "author": "FelixRilling",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/FelixRilling/di-ngy/issues"
    },
    "homepage": "https://github.com/FelixRilling/di-ngy#readme",
    "dependencies": {
        "@types/fs-extra": "^5.0.4",
        "@types/node": "^10.12.1",
        "@types/yamljs": "^0.2.30",
        "cli-ngy": "^10.0.2",
        "discord.js": "^11.4.2",
        "fs-extra": "^7.0.0",
        "lightdash": "^9.1.0",
        "logby": "^2.0.1",
        "yamljs": "^0.3.0"
    },
    "devDependencies": {
        "@types/jasmine": "^2.8.9",
        "countly-docdash": "^0.5.0",
        "jasmine": "^3.3.0",
        "jsdoc": "^3.5.5",
        "npm-run-all": "^4.1.3",
        "prettier": "^1.14.3",
        "rollup": "^0.66.6",
        "rollup-plugin-node-resolve": "^3.4.0",
        "rollup-plugin-typescript2": "^0.17.2",
        "tslint": "^5.11.0",
        "typescript": "^3.1.5"
    }
}
